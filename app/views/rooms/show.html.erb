<div class="fake-box"></div>
  <div class="room-host">
    <div class="my-img" style="background-image: url(<%= rails_blob_path(@user.image) %>) "></div>
    <div class="my-name">投稿主 <%= @user.user_name %> </div>
  </div>
  <div class="room-host-title">
    <p><%= @myroom.room_name %></p>
  </div>
  
  <% if @myroom.image.attached? %>
    <div class="room-img">
    <%= image_tag @myroom.image %>
    </div>
      <% else %>
  <% end %>
  
  <div class="details">
    <p class="details-top-text">相談の詳細</p>
    <p class="details-bottom-text"><%= @myroom.text %></p>
      <p class="room-host-chat">
        <input class="room-inuput" type="submit" value="相談主とチャットする">
      </p>
    </div>
  <div class="comment-list-toptext">
    <p>コメント一覧</p>
  </div>
  <div class="room-comment">
    <div  class="room-host-img-day">
      <p>
        <div class="my-img"></div>
      </p>
      <div>
      <p class="day-text">2025/8/25</p>
      </div>
      </div>
      <div class="room-host-name">
        <p>投稿主 ここばあさん</p>
      </div>
  </div>
  
    <div class="container"> 
    <!-- ここからフォーム -->
    <% if current_user %>
      <%= form_tag("/rooms/#{@myroom.id}/comments", method: :post) do %>
        <textarea name="text" placeholder="コメントする" rows="2" cols="30"></textarea>
        <input type="submit" value="SENT">
      <% end %>
    <% end %>
    
        <div class="comments">   
      <h4>＜コメント一覧＞</h4>
      <% if @comments %>
        <% @comments.each do |comment| %>
            <strong><%= link_to comment.user.user_name, "/users/#{comment.user_id}" %>：</strong>
            <div class="comment-text"><%= comment.text %></div>
              <div class="room-comment">
              <div  class="room-host-img-day">
                <p>
                  <div class="my-img" style="background-image: url(<%= rails_blob_path(@user.image) %>) "></div>
                </p>
                <div>
                <p class="day-text">2025/8/25</p>
                </div>
                </div>
                <div class="room-host-name">
                  <p><%= @user.user_name %>さん</p>
                </div>
              </div>
        <% end %>
      <% end %>
    </div>
  </div>
